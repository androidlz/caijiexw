<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:custom="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

    <com.zyw.horrarndoo.sdk.widgets.slider.SliderLayout
        android:id="@+id/vp_banner"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        custom:auto_cycle="true"
        custom:indicator_visibility="visible"
        custom:pager_animation="Accordion" />

    <com.zyw.horrarndoo.sdk.widgets.slider.Indicators.PagerIndicator
        android:id="@+id/custom_indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/vp_banner"
        android:layout_alignRight="@+id/vp_banner"
        android:layout_marginBottom="12dp"
        android:layout_marginRight="18dp"
        android:gravity="center"
        custom:selected_color="#CE3D3A"
        custom:selected_height="4dp"
        custom:selected_width="3dp"
        custom:shape="rect"
        custom:unselected_color="#fff"
        custom:unselected_height="4dp"
        custom:unselected_width="3dp" />
</RelativeLayout>